{
  "$schema": "https://json.schemastore.org/lerna",
  "version": "2.4.25",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "message": "chore(release): publish %s"
    },
    "publish": {
      "message": "chore(release): publish",
      "ignoreChanges": ["**/__tests__/**", "**/*.test.{js,mjs,ts,jsx,tsx}", "**/*.{md,mdx}"]
    }
  }
}
