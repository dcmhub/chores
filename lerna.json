{
  "$schema": "https://schema.easynm.cn/lerna.json",
  "version": "2.6.4",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": ["packages/*"],
  "command": {
    "version": {
      "allowBranch": "master",
      "message": "chore(release): publish %s"
    },
    "publish": {
      "message": "chore(release): publish",
      "ignoreChanges": ["**/__tests__/**", "**/*.test.{js,mjs,ts,jsx,tsx,vue}", "**/*.{md,mdx}"]
    }
  }
}
