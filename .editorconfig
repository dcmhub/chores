# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
indent_size = 4

[*.rs]
indent_size = 4

[Dockerfile]
indent_size = 4

[*.go]
indent_style = tab
indent_size = 4

[go.{mod,sum}]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4

[*.{json,jsonc}]
insert_final_newline = false

[*.svg]
insert_final_newline = false

[*.{md,mdx}]
trim_trailing_whitespace = false
